<div class="page-header">
    <h1>Tárgyhoz tartozó adatok módosítása</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.leiras}}
                has-error
            {{/if}}
        ">
            <label for="leiras" class="col-lg-2 control-label">A tárgy új neve:</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="leiras" name="leiras">{{data.description}}</textarea>
                {{#if validationErrors.leiras}}
                    <span class="help-block">{{validationErrors.leiras.msg}}</span>
                {{/if}}
            </div>
            <label for="statusz" class="col-lg-2 control-label">A tárgy új állapota:</label>
            <div class="col-lg-10 row-fluid" style="padding-top:15px;">
                <div>
                    <input type="radio" name="statusz" value="done" checked />Elvégezve
                </div>
                <div>
                    <input type="radio" name="statusz" value="not-done" />Folyamatban
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">OK</button>
            </div>
        </div>
    </fieldset>
</form>        